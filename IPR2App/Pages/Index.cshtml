@page
@model IndexModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Real-Time App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3>Dashboard</h3>
            </div>
            <div class="card-body">
                <form id="createForm" class="input-group mb-4">
                    <input type="text" id="recordInput" class="form-control" placeholder="Enter post text...">
                    <button type="submit" id="btnSend" class="btn btn-success" disabled>Send (API)</button>
                </form>

                <hr />

                <h5>Event feed (Real-time):</h5>
                <ul id="eventsList" class="list-group"></ul>
            </div>
        </div>
    </div>

    <script type="module" src="/js/site.js"></script>
</body>
</html>